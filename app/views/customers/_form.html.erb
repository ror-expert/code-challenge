<div class="py-5">
  <%= form_for(@customer, url: url) do |f| %>
    <div class="row my-lg-3">
      <div class="col-lg-3">
        <label><strong>First Name</strong><br><small class="text-muted">First name of the customer</small></label>
      </div>
      <div class="col-lg offset-lg-1">
        <div class="form-group">
          <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", required: true %>
        </div>
      </div>
    </div>

    <div class="row my-lg-3">
      <div class="col-lg-3">
        <label><strong>Last Name</strong><br><small class="text-muted">Last name of the customer</small></label>
      </div>
      <div class="col-lg offset-lg-1">
        <div class="form-group">
          <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", required: true %>
        </div>
      </div>
    </div>

    <div class="row my-lg-3">
      <div class="col-lg-3">
        <label><strong>email</strong><br><small class="text-muted">Customer email</small></label>
      </div>
      <div class="col-lg-8 offset-lg-1">
        <div class="form-group">
          <%= f.email_field :email, class: "form-control", placeholder: "Email", required: true %>
        </div>
      </div>
    </div>

    <div class="row my-lg-3">
      <div class="col">
        <div class="form-group">
          <%= f.submit class: "btn btn-success"%>
        </div>
      </div>
    </div>
  <% end %>
</div>
